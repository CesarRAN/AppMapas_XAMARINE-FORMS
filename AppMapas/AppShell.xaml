       xmlns:views="clr-namespace:AppMapas.Views"
       Title="AppMapas"
       x:Class="AppMapas.AppShell">

    <TabBar>
        <ShellContent Title="Ubicaciones"
                      Icon="icon_feed.png"
                      ContentTemplate="{DataTemplate views:LocatePage}" />
